# OpenMemory Plus - Environment Configuration
# Copy this file to .env.local and fill in your values

# ============================================
# OpenMemory MCP Configuration
# ============================================

# OpenMemory API (if using hosted version)
OPENMEMORY_API_KEY=
OPENMEMORY_USER_ID=

# ============================================
# Qdrant Vector Database
# ============================================

# Local Qdrant (default: Docker)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# Qdrant Cloud (optional)
# QDRANT_URL=https://xxx.qdrant.io
# QDRANT_API_KEY=your-qdrant-cloud-api-key

# ============================================
# Embedding Model (BGE-M3)
# ============================================

# Ollama (default, local)
OLLAMA_URL=http://localhost:11434
EMBEDDING_MODEL=bge-m3

# Alternative: OpenAI Embeddings
# OPENAI_API_KEY=sk-xxx
# EMBEDDING_MODEL=text-embedding-3-small

# ============================================
# LLM for Classification (记忆分类)
# ============================================
# 只需配置一个 Provider，系统会自动检测

# DeepSeek (推荐，性价比高，中文能力强)
DEEPSEEK_API_KEY=
# DEEPSEEK_BASE_URL=https://api.deepseek.com

# MiniMax (国产大模型，响应快速)
MINIMAX_API_KEY=
# MINIMAX_BASE_URL=https://api.minimax.chat/v1

# 智谱 AI / ZhiPu (GLM 系列，学术背景)
ZHIPU_API_KEY=
# ZHIPU_BASE_URL=https://open.bigmodel.cn/api/paas/v4

# 通义千问 / Qwen (阿里云，生态完善)
DASHSCOPE_API_KEY=
# DASHSCOPE_BASE_URL=https://dashscope.aliyuncs.com/compatible-mode/v1

# OpenAI (原版 GPT，功能最全)
OPENAI_API_KEY=
# OPENAI_BASE_URL=https://api.openai.com/v1

# 自定义模型 (覆盖默认模型)
# LLM_MODEL=deepseek-chat

# Local LLM via Ollama (本地运行，无需 API Key)
# 需要先安装模型: ollama pull qwen2.5:7b
# LLM_PROVIDER=ollama
# LLM_MODEL=qwen2.5:7b

# ============================================
# GitHub Integration (for CI/CD)
# ============================================

GITHUB_TOKEN=
NPM_TOKEN=

# ============================================
# Development Settings
# ============================================

# Debug mode
DEBUG=false
LOG_LEVEL=info

# Node environment
NODE_ENV=development

